INCLUDES=-I../include -I./esp
LIBS=
CC=gcc
CFLAGS=-g -Wall

clean:
	-rm ./*.o

ringbuffer.o: ../ringbuffer.c
	$(CC) $(CFLAGS) $(INCLUDES) -c -o $@ $^ $(LIBS)

multipart.o: ../multipart.c
	$(CC) $(CFLAGS) $(INCLUDES) -c -o $@ $^ $(LIBS)


test_ringbuffer: test_ringbuffer.c ringbuffer.o
	$(CC) $(CFLAGS) $(INCLUDES) -o $@ $^ $(LIBS)

test_multipart: test_multipart.c ringbuffer.o multipart.o
	$(CC) $(CFLAGS) $(INCLUDES) -o $@ $^ $(LIBS)

test_multipart_short: test_multipart_short.c ringbuffer.o multipart.o
	$(CC) $(CFLAGS) $(INCLUDES) -o $@ $^ $(LIBS)


test: test_ringbuffer test_multipart test_multipart_short
	./test_ringbuffer
	./test_multipart
	./test_multipart_short


.PHONY: test clean
